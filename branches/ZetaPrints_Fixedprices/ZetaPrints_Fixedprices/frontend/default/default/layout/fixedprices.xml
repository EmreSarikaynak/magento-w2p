<?xml version="1.0"?>
<layout version="0.1.0">
  <fixedprices_js_css translate="label">
    <label>Fixed pricing javascript and css updates.</label>
    <reference name="head">
      <action method="addItem" ifconfig="catalog/price/use_fixed"><type>skin_js</type><name>js/fixedprices.js</name></action>
      <action method="addItem" ifconfig="catalog/price/use_fixed"><type>skin_css</type><name>css/fixedprices.css</name></action>
    </reference>
  </fixedprices_js_css>
  <catalog_product_view>
    <update handle="fixedprices_js_css"/>
    <reference name="content">
      <reference name="product.info">
        <reference name="alert.urls">
          <block type="fixedprices/catalog_product_view_fixedprices" name="fixedprices"
            as="fixedprice" after="-" template="catalog/product/view/fixedprices.phtml" />
        </reference>
      </reference>
    </reference>
  </catalog_product_view>
  <catalog_category_default>
    <update handle="fixedprices_js_css"/>
  </catalog_category_default>
  <checkout_cart_index>
    <update handle="fixedprices_js_css"/>
  </checkout_cart_index>
  <!--<checkout_multishipping>
    <update handle="fixedprices_js_css"/>
  </checkout_multishipping>
  <checkout_onepage_index>
    <update handle="fixedprices_js_css"/>
  </checkout_onepage_index>
--></layout> 