if(undefined == AjaxUpload){
  var au = document.createElement('script'); au.type = 'text/javascript';
  au.src = '<?php echo $this->helper("attachment/upload")->getUploadJsUrl("js/ajaxupload.js")?>';
  (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(ga);
}
</script>
    <?php echo $this->helper('attachment/upload')->uploadControl($_option);?>
